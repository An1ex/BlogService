[Server]
RunMode = "debug"
HttpPort = "8080"
ReadTimeout = 60
WriteTimeout = 60

[App]
DefaultPageSize = 10
MaxPageSize = 100
LogSavePath = "storage/logs"
LogFileName = "app"
LogFileExt = ".log"
UploadSavePath = "storage/uploads"
UploadServerUrl = "localhost:8080/static"
UploadImageMaxSize = 5
UploadImageAllowExts = [".jpg", ".jpeg", ".png"]

[Database]
Address = "127.0.0.1:3306"
Username = "root"
Password = "root"
Database = "blog_service"
Charset = "utf8"
ParseTime = true
MaxIdleConns = 10
MaxOpenConns = 30

[JWT]
Secret = "service_secret"
Issuer = "blog_service"
Expire = 7200